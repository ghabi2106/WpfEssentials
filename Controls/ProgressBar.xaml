<Window x:Class="Controls.ProgressBar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Controls"
        mc:Ignorable="d"
        Title="ProgressBar" Height="300" Width="300">
    <StackPanel>
        <ProgressBar Margin="12" x:Name="Progress" Value="20" Height="30" Width="220" Minimum="0" Maximum="100" />
        <Button x:Name="StartLongRunningTask"
                Click="StartLongRunningTask_OnClick"
                Height="30" Width="140" Content="StartLongRunningTask" />
    </StackPanel>
</Window>