<Window x:Class="Layout.Canvas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Layout"
        mc:Ignorable="d"
        Title="Canvas" Height="800" Width="600">
    <Canvas>
        <Rectangle Canvas.Left="12" Canvas.Top="12" 
                   Width="220" Height="180" Fill="Red"/>
        <Rectangle Canvas.Left="12" Canvas.Bottom="12" 
                   Width="220" Height="180" Fill="Black"/>
        <Rectangle Canvas.Right="12" Canvas.Top="12" 
                   Width="220" Height="180" Fill="Blue"/>
        <Rectangle Canvas.Right="12" Canvas.Bottom="12" 
                   Panel.ZIndex="1"
                   Width="220" Height="180" Fill="Violet"/>
        <Rectangle Canvas.Right="64" Canvas.Bottom="120" 
                   Panel.ZIndex="2"
                   Width="220" Height="180" Fill="Orange"/>
    </Canvas>
</Window>
