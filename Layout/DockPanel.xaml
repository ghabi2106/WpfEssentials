<Window x:Class="ItemsControls.DockPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="DockPanel" Height="300" Width="300">
    <DockPanel LastChildFill="True">
        <Button DockPanel.Dock="Top" Content="TOP" Height="60"/>
        <Button DockPanel.Dock="Top" Content="TOP" Height="60"/>
        <Button DockPanel.Dock="Left" Content="LEFT" Width="60"/>
        <Button DockPanel.Dock="Right" Content="RIGHT" Width="60"/>
        <Button DockPanel.Dock="Bottom" Content="BOTTOM" Height="60"/>
        <Button DockPanel.Dock="Left" Content="ToFillOrNotToFill"/>
    </DockPanel>
</Window>