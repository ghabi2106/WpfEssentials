<Window x:Class="PropertiesAndEvents.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Window1" Height="600" Width="600">
   <Border  x:Name="MyBorder" Margin="15" BorderBrush="Red" 
           BorderThickness="3" Padding="36" Background="Transparent">
       <StackPanel x:Name="BlueStackPanel" Orientation="Vertical" Background="Blue">
           <Rectangle x:Name="GreenRectangle" Width="300" Height="300" Margin="6" 
                      Fill="Green" StrokeThickness="3" Stroke="Black"/>
       </StackPanel>
   </Border>
</Window>
