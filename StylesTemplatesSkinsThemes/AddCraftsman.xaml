<Window x:Class="StylesTemplatesSkinsThemes.AddCraftsman"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StylesTemplatesSkinsThemes"
        xmlns:userAndCustomControls="clr-namespace:UserAndCustomControls;assembly=UserAndCustomControls"
        mc:Ignorable="d" ResizeMode="NoResize"
        Title="AddCraftsman" Height="300" Width="300">
    <Grid  Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <userAndCustomControls:CraftsmanInput x:Name="CraftsmanInput"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Button x:Name="Cancel" Click="Cancel_OnClick" Content="Cancel" Margin="6" />
            <Button x:Name="Ok" Click="Ok_OnClick" Grid.Column="1" Margin="6" Content="OK" />
        </Grid>
    </Grid>
</Window>